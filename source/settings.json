{
  "name": "Neat",
  "version": "2.3.6",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Good for a logo up to 208 x 66 pixels"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow_images",
      "label": "Slideshow",
      "description": "Adds a full screen slideshow to the homepage"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "header_font",
      "body_font": "text_font",
      "text_color": "text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "header_font": "Dosis",
              "text_font": "Open Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "header_background_color": "#FFFFFF",
              "header_text_color": "#000000",
              "welcome_text_color": "#FFFFFF",
              "text_color": "#111111",
              "link_color": "#444444",
              "link_hover_color": "#1B1B1B",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#000000",
              "button_background_hover_color": "#333333",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          },
          {
            "style_name": "Classic #2",
            "fonts": {
              "header_font": "DM Sans",
              "text_font": "DM Sans"
            },
            "colors": {
              "background_color": "#141415",
              "header_background_color": "#141415",
              "header_text_color": "#F8F8F8",
              "welcome_text_color": "#F8F8F8",
              "text_color": "#F8F8F8",
              "link_color": "#F8F8F8",
              "link_hover_color": "#B7B6B6",
              "button_text_color": "#141415",
              "button_background_color": "#F8F8F8",
              "button_background_hover_color": "#B7B6B6",
              "announcement_text_color": "#141415",
              "announcement_background_color": "#F8F8F8"
            }
          },
          {
            "style_name": "Classic #3",
            "fonts": {
              "header_font": "Cabin",
              "text_font": "Cabin"
            },
            "colors": {
              "background_color": "#F8F8FA",
              "header_background_color": "#F8F8FA",
              "header_text_color": "#2A2A2C",
              "welcome_text_color": "#FFFFFF",
              "text_color": "#2A2A2C",
              "link_color": "#2A2A2C",
              "link_hover_color": "#203BE1",
              "button_text_color": "#F8F8FA",
              "button_background_color": "#2A2A2C",
              "button_background_hover_color": "#203BE1",
              "announcement_text_color": "#2A2A2C",
              "announcement_background_color": "#E3E4EA"
            }
          }
        ]
      },
      {
        "group_name": "Playful",
        "styles": [
          {
            "style_name": "Playful #1",
            "fonts": {
              "header_font": "Syne",
              "text_font": "Syne"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "header_background_color": "#FFFFFF",
              "header_text_color": "#0000FF",
              "welcome_text_color": "#FFFFFF",
              "text_color": "#0000FF",
              "link_color": "#0000FF",
              "link_hover_color": "#000098",
              "button_text_color": "#0000FF",
              "button_background_color": "#FFE500",
              "button_background_hover_color": "#EBD300",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#0000FF"
            }
          },
          {
            "style_name": "Playful #2",
            "fonts": {
              "header_font": "Quicksand",
              "text_font": "Quicksand"
            },
            "colors": {
              "background_color": "#FFFBFD",
              "header_background_color": "#FFE9F4",
              "header_text_color": "#243588",
              "welcome_text_color": "#FFFFFF",
              "text_color": "#243588",
              "link_color": "#243588",
              "link_hover_color": "#0C143B",
              "button_text_color": "#243588",
              "button_background_color": "#FFFA8D",
              "button_background_hover_color": "#FFF520",
              "announcement_text_color": "#243588",
              "announcement_background_color": "#FFFA8D"
            }
          },
          {
            "style_name": "Playful #3",
            "fonts": {
              "header_font": "Concert One",
              "text_font": "Dosis"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "header_background_color": "#9DFFFC",
              "header_text_color": "#0B0423",
              "welcome_text_color": "#FFFFFF",
              "text_color": "#0B0423",
              "link_color": "#0B0423",
              "link_hover_color": "#F90081",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#F90081",
              "button_background_hover_color": "#D1006C",
              "announcement_text_color": "#0B0423",
              "announcement_background_color": "#F6FF20"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Dosis"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Open Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "variable": "header_background_color",
      "label": "Header Background",
      "default": "#ffffff"
    },
    {
      "variable": "header_text_color",
      "label": "Header Text",
      "default": "#000000"
    },
    {
      "variable": "welcome_text_color",
      "label": "Welcome text",
      "default": "#ffffff"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#111111"
    },
    {
      "variable": "link_color",
      "label": "Links",
      "default": "#444444"
    },
    {
      "variable": "link_hover_color",
      "label": "Link Hover",
      "default": "#1b1b1b"
    },
    {
      "variable": "button_text_color",
      "label": "Button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "variable": "button_background_hover_color",
      "label": "Button background hover",
      "default": "#333333"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#000000"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "208px",
    "header_image_max_height": "66px",
    "title_font": "{{ header_font }}",
    "title_font_size": "22px",
    "title_color": "{{ header_text_color }}",
    "title_background_color": "transparent",
    "background_color": "{{ header_background_color }}",
    "body_font": "{{ text_font }}",
    "body_font_size": "16px",
    "step_border_color":"{{ text_color }}",
    "step_header_color":"{{ text_color }}",
    "step_inactive_header_color":" {{ text_color }}",
    "step_header_font":"{{ header_font }}",
    "step_background_color":"{{ background_color }}",
    "content_background_color":"{{ background_color }}",
    "content_banded": "true",
    "content_header_background_color":"{{ background_color }}",
    "content_header_color":"{{ text_color }}",
    "content_color":"{{ text_color }}",
    "content_header_font_size":"18px",
    "content_border_color":"transparent",
    "content_border_radius":"0px",
    "error_background_color": "#a92d22",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#a92d22",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#000000",
    "input_error_border_color": "#a92d22",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius":"0px",
    "input_font":"{{ text_font }}",
    "button_color":"{{ button_text_color }}",
    "button_border_width":"1px",
    "button_border_radius":"0px",
    "button_hover_color":"{{ button_text_color }}",
    "button_background_color":"{{ button_background_color }}",
    "button_hover_background_color":"{{ button_background_hover_color }}",
    "button_border_color":"{{ button_background_color }}",
    "button_hover_border_color":"{{ button_background_hover_color }}",
    "link_color":"{{ link_color }}",
    "link_hover_color":"{{ link_hover_color }}",
    "step_header_font_size":"18px",
    "summary_color":"{{ text_color }}",
    "summary_secondary_color":"{{ link_color }}",
    "summary_submit_background_color":"{{ background_color }}",
    "summary_item_border_color":"{{ text_color }}",
    "summary_item_list_border_color": "{{ text_color }}"
  },
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..6",
      "default": 2,
      "description": "The number of custom page links show in the main navigation."
    },
    {
      "variable": "welcome_header",
      "label": "Welcome header",
      "type": "text",
      "description": "Welcome header for the Home page"
    },
    {
      "variable": "welcome_subheader",
      "label": "Welcome subheader",
      "type": "text",
      "description": "Welcome subheader for the Home page"
    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button text",
      "type": "text",
      "description": "Displays underneath the welcome text on the Home page and links to your Products page"
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "type": "text",
      "description": "Featured products header on the Home page",
      "default": "Featured"
    },
    {
      "variable": "categories_header",
      "label": "Categories header",
      "type": "text",
      "description": "Text for categories in navigation and on the categories page when using category collections",
      "default": "Categories"
    },
    {
      "variable": "featured_subheader",
      "label": "Featured subheader",
      "type": "text",
      "description": "Featured products subheader on the Home page"
    },
    {
      "variable": "featured_overlay_opacity",
      "label": "Slideshow overlay opacity",
      "type": "select",
      "options": [
        ["None", "0"],
        ["25%", ".25"],
        ["50%", ".5"]
      ],
      "default": ".5",
      "description": "Darken the home page slideshow. Helps legibility of your menu items and welcome headers."
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "collections",
      "label": "Enable category collections",
      "type": "boolean",
      "default": false,
      "description": "Use category collections instead of the traditional product listing page"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Shows the product search area"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": false,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "share_buttons",
      "label": "Show product share buttons",
      "type": "boolean",
      "default": false,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ]
}
